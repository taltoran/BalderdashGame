<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>

<h1> Round One</h1>

<div> Select your question: </div>

<div class="gamediv">       
  <div class="content" style="color:#ff5757"> <span class="value"></span></div>
  <div id="game">
    <div id="form_layout">
      <form action="GamePlay" method="post" id="myForm">
        <select name="questions">
            <option value="questionOne">{{questionOne}}</option>
            <option value="questionTwo">{{questionTwo}}</option>
            <option value="questionThree">{{questionThree}}</option>
            <option value="questionFour">{{questionFour}}</option>
            <option value="questionFive">{{questionFive}}</option>
            <option value="questionSix">{{questionSix}}</option>
        </select>

        <div class="submitdiv">
            <div class="center">
                <input type="submit" id="submit" value="Submit"/>
            </div>
        </div>

      </form>
    </div>
  </div>
</div>


<script>
$("submit").click(function(){
    $("div").hide();
});
</script>
