<script src="../js/joinValidation.js" type="text/javascript"></script>

<h1>Join a Game </h1>

<div class="joindiv">       
  <div class="content" style="color:#ff5757"> <span class="value"></span></div>
  <div id="join">
    <h5 id="wc">Welcome!</h5>
    <h5 id="ac">Please Join a Game:</h5>
    <div id="form_layout">
      <form action="Join" method="post" id="myForm">
        <label>Game Room Code:</label>
        <input id="code" name="code" type="text"/>
        <div class="content" style="color:#ff5757"><span class="invalidCode">{{invalidCode}}</span></div>
        <p></p>
        <div class="submitdiv">
          <div class="center">
            <input type="submit" id="submit" value="Join Game"/>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
