script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js')
div  
.gamediv
    - var questions = questionOne
    div
    each value, index in questions
        button.send(name=value)= (index+1) + ". " + value
        br
        br

div
.gamediv2
    div
    p(id="chosenQuestion")
    input#inputAnswer(placeholder='Type your answer')
    input#sendAnswer(type='button', value='send')

div
.gamediv3
    div
    p(id="answers")
    - var languages = {'php': -1, 'node': 2, 'ruby':1}
    div   
    each value, key in languages
        p= key + ": " + value
        

script.
  $("div.gamediv2").hide();
  $("div.gamediv3").hide();

  $(".send").click(function(){
    $("div.gamediv").hide();
    $("div.gamediv2").show();
  });

  $("#sendAnswer").click(function(){
    $("div.gamediv2").hide();
    $("div.gamediv3").show();
  });


script(src='../js/templates.js', type='text/javascript')
script(src='http://localhost:3000/socket.io/socket.io.js')