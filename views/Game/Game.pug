html
  script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js')
  head
    style.
      .loader {
      border: 10px solid #f3f3f3;
      border-radius: 50%;
      border-top: 10px solid #3498db;
      width: 80px;
      height: 80px;
      -webkit-animation: spin 1.5s linear infinite;
      animation: spin 1.5s linear infinite;
      margin:0 auto;"
      }

      @-webkit-keyframes spin {
      0% { -webkit-transform: rotate(0deg); }
      100% { -webkit-transform: rotate(360deg); }
      }

      @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
      }

      h1.centered {
      padding-top: 1cm;
      text-align: center;
      }

      div.mainScreen {
      
      }

      div.loadScreen {

      }

      div.roundOne {

      }


  body
    div.mainScreen
      div.loadScreen
        h1.centered Waiting For Players! (Room Join Code = CODE)
        .loader
        h1.centered Joined Players


div.roundOne
  h1  Round One
  div  Select your question:
  .gamediv
    .content(style='color:#ff5757')
      span.value
    #game
      #form_layout
        form#myForm(action='GamePlay', method='post')
          select(name='questions')
            option(value='questionOne') #{questionOne}
            option(value='questionTwo') #{questionTwo}
            option(value='questionThree') #{questionThree}
            option(value='questionFour') #{questionFour}
            option(value='questionFive') #{questionFive}
            option(value='questionSix') #{questionSix}
          .submitdiv
            .center
              input#submit(type='submit', value='Submit')
  script.
    $("submit").click(function(){
    $("div").hide();
    });
